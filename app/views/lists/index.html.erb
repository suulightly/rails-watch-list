<%= render 'navbar' %>

<div class="home-banner">
  <h1>Save Movie Lists</h1>
</div>

<div class="container mt-3">
  <h3>here are all the lists</h3>

  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
        <%= link_to list.name, list_path(list) %> |
        <%= link_to list_path(list),
            method: :delete,
            data: { confirm: "Delete?" } do %>
              <i class="far fa-trash-alt"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
